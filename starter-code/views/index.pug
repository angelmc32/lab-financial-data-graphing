extends layout

block content

  .user-interface
    .container-left
      h2 Filters
      .container2
        label(for="from") From
        input(type="date" name="from")
        label(for="to") To
        input(type="date" name="to")
      .container2
        p Currency
        select(name="currency")
          option(value="USD") USD
          option(value="EUR") EUR
          option(value="MXN") MXN
          option(value="GBP") GBP
          option(value="JPY") JPY
    .container-right
      h2 Values
      p(id="max") Max:
      p(id="min") Min:

  .canvas-container
    canvas(id="chart")
